# Project Configuration
PROJECT_NAME=haleway
DOCKER_SUBNET=172.21.0.0/16  # Unique subnet to avoid Docker network conflicts

# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# Database
DB_NAME=haleway_db
DB_USER=haleway_user
DB_PASSWORD=secure-password-here
DB_HOST=db
DB_PORT=5432
DB_PORT_EXTERNAL=5445  # External port (auto-generated to avoid conflicts)

# Cloudflare Tunnel
CLOUDFLARE_TUNNEL_TOKEN=your-tunnel-token-here
DOMAIN_NAME=haleway.flyhomemnlab.com

# Mapbox API (for address autocomplete and geocoding)
# Get your free API key at: https://account.mapbox.com/
MAPBOX_ACCESS_TOKEN=your-mapbox-token-here

# Email Configuration
# For development with Gmail:
# 1. Enable 2-factor auth: https://myaccount.google.com/security
# 2. Create App Password: https://myaccount.google.com/apppasswords
# 3. Use app password below (not your regular password)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your.email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password-here
DEFAULT_FROM_EMAIL=your.email@gmail.com

